# references: http://tecadmin.net/install-go-on-ubuntu/#

wget -c https://storage.googleapis.com/golang/go1.8.linux-amd64.tar.gz

tar xzvf go1.8.linux-amd64.tar.gz

# if there is an older version, immediately move it to another folder
#mv /usr/local/go /usr/local/go-{version}

mv go /usr/local

export GOROOT=/usr/local/go

export GOPATH=$HOME/go-workspaces

export PATH=$GOPATH/bin:$GOROOT/bin:$PATH

go version

go env
